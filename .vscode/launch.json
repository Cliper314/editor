{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug student project",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build with make",
      "miDebuggerPath": "/usr/bin/gdb",
      "postDebugTask": "clean"
    }
  ]
}